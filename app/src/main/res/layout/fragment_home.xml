<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/background_img"
        tools:context=".fragments.HomeFragment">

        <TextView
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circ1"
            android:layout_marginTop="@dimen/_20ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20ssp"
            android:background="@drawable/circ2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20ssp"
            android:background="@drawable/circ3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/banner"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintTop_toBottomOf="@+id/circle3"/>

        <TextView
            android:id="@+id/nearTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctors Nearby You"
            android:layout_marginTop="@dimen/_10ssp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintRight_toRightOf="parent"/>


        <ImageView
            android:id="@+id/doctor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doc2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearTxt" />

        <android.widget.Button
            android:id="@+id/bookAppointments"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Book AppoIntments"
            android:textColor="@color/white"
            android:background="@drawable/btn_rectangular"
            app:layout_constraintTop_toBottomOf="@+id/doctor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
