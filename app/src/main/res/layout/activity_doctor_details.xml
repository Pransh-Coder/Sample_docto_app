<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/back_red"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/back_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/back_white"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/doctor"
            android:layout_marginTop="50dp"
            android:src="@drawable/man"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/doctorName"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/doctor"
            android:text="Dr. Mirza Waqar Beg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDoctorPost"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/doctorName"
            android:text="MBBS MD Paediatrics Diploma - Child Health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtDoctorPost"
            android:src="@drawable/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/back_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="About"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/about"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/about"
            android:layout_margin="@dimen/_15sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec maximus imperdiet nisl, non hendrerit tortor venenatis eget. Etiam eleifend varius ipsum a pellentesque. Sed placerat pharetra sem, quis laoreet augue fermentum quis. Vivamus velit nunc, pellentesque at ipsum non, pretium facilisis sem. Donec ac feugiat orci. Aenean leo nulla, rhoncus in mollis sed, maximus eget sapien."
            android:id="@+id/aboutDesc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/aboutDesc"
            android:layout_margin="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Quality 1:Lorem ipsum dolor sit amet\nQuality 2:Lorem ipsum dolor sit amet\nQuality 3:Lorem ipsum dolor sit amet"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:src="@drawable/back_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>